<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.peppe.amanbhardwaj.peppe.PetsProfileActivity"
    tools:showIn="@layout/activity_pets_profile"
    android:background="@color/teal_50"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/petImageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/puppy1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/petName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="JABBY"
        android:textSize="@dimen/profile_title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/profile_margin_top"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/petImageView"
        app:layout_constraintHorizontal_bias="0.0"
         />

    <TextView
        android:id="@+id/petSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2 years, Female"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/petName"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="20dp"
        android:textColor="@color/black_semi_transparent"
        android:textSize="@dimen/card_subtitle"
         />

    <TextView
        android:id="@+id/member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Member since November, 2016"
        android:gravity="left"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/petSubTitle"
        android:layout_marginTop="19dp"
        android:textColor="@color/black_semi_transparent"
        android:textSize="@dimen/card_subtitle"
        app:layout_constraintHorizontal_bias="0.0"
        />

    <LinearLayout
        android:id="@+id/saperator1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/saperator_height"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/profile_section_top"
        android:background="@color/teal_bg"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/member"
        />

    <TextView
        android:id="@+id/about_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="She is friendly and very active also she eats 3 times a day. Royal Canine is its favorite food."
        android:textSize="@dimen/card_subtitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black_semi_transparent"
        android:elevation="5sp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/profile_section_top"
        app:layout_constraintTop_toBottomOf="@+id/saperator1"
        />



    <LinearLayout
        android:id="@+id/saperator2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/profile_section_top"
        android:background="@color/teal_bg"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_textView"
        />



    <TextView
        android:id="@+id/breed_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Breed"
        android:textSize="@dimen/card_subtitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black_semi_transparent"
        android:elevation="5sp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="@dimen/profile_section_top"
        app:layout_constraintTop_toBottomOf="@+id/saperator2"
        />

    <TextView
        android:id="@+id/breed_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="German Sheferd"
        android:textSize="@dimen/card_desc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black_semi_transparent"
        android:elevation="5sp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/margin_top"
        app:layout_constraintTop_toBottomOf="@+id/breed_label"
        app:layout_constraintHorizontal_bias="0.0"
        />


    <LinearLayout
        android:id="@+id/saperator3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/saperator_height"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/profile_section_top"
        android:background="@color/teal_bg"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/breed_textView"
        />


    <TextView
        android:id="@+id/birt_date_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Date Of Birth"
        android:textSize="@dimen/card_subtitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black_semi_transparent"
        android:elevation="5sp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="@dimen/profile_section_top"
        app:layout_constraintTop_toBottomOf="@+id/saperator3"
        />

    <TextView
        android:id="@+id/birth_date_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="20 Oct 2015"
        android:textSize="@dimen/card_desc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black_semi_transparent"
        android:elevation="5sp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="@dimen/margin_top"
        app:layout_constraintTop_toBottomOf="@+id/birt_date_label"
        />


    <LinearLayout
        android:id="@+id/saperator4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/saperator_height"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/profile_section_top"
        android:background="@color/teal_bg"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birth_date_textView"
        />

    <TextView
        android:id="@+id/medical_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Medical Condition"
        android:textSize="@dimen/card_subtitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black_semi_transparent"
        android:elevation="5sp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="@dimen/profile_section_top"
        app:layout_constraintTop_toBottomOf="@+id/saperator4"
        />

    <TextView
        android:id="@+id/medical_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Healthy, vaccinations course is complete"
        android:textSize="@dimen/card_desc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black_semi_transparent"
        android:elevation="5sp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="@dimen/margin_top"
        app:layout_constraintTop_toBottomOf="@+id/medical_label"
        />

</android.support.constraint.ConstraintLayout>
