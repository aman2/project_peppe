<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/blue_500"
                android:endColor="@color/blue_500"
                android:type="linear"
                android:angle="270"
                android:centerColor="@color/blue700" />
            <stroke
                android:width="5dp"
                android:color="@color/blue_100" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:centerColor="@color/blue_500" />
            <stroke
                android:width="4dp"
                android:color="@color/blue_100" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>
</layer-list>