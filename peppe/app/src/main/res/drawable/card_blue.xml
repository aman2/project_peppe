<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/indigo_200"
                android:endColor="@color/indigo_200"
                android:type="linear"
                android:angle="270"
                android:centerColor="@color/indigo_700" />
            <stroke
                android:width="1dp"
                android:color="@color/indigo_700" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/indigo_200"
                android:endColor="@color/indigo_200"
                android:type="linear"
                android:angle="270"
                android:centerColor="@color/indigo_700" />
            <stroke
                android:width="1dp"
                android:color="@color/indigo_200" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>
</layer-list>