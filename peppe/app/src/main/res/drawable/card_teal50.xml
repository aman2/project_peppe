<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/primaryColorDark"
                android:endColor="@color/primaryColor"
                android:type="linear"
                android:angle="270"
                android:centerColor="@color/accentColor" />
            <stroke
                android:width="1dp"
                android:color="@color/black_semi_transparent" />
            <corners
                android:radius="20dp" />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/teal_50"
                android:endColor="@color/teal_50"
                android:type="linear"
                android:angle="270"
                android:centerColor="@color/teal_50" />
            <stroke
                android:width="2dp"
                android:color="@color/teal_50" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>
</layer-list>